---
import type { CollectionEntry } from "astro:content";
import Lesson from "./Lesson.astro";

type Props = {
    lessons: CollectionEntry<'lessons'>[];
}

const { lessons } = Astro.props;
---

<div
    class="grid grid-cols-2 gap-x-16 gap-y-14 max-md:grid-cols-1 mb-24"
>
    {lessons.map((lesson) => <Lesson lesson={lesson} />)}
    
</div>