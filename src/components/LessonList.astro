---
import type { CollectionEntry } from "astro:content";
import Lesson from "./Lesson.astro";

type Props = {
    lessons: CollectionEntry<'lessons'>[];
}

const { lessons } = Astro.props;

const orderedLessons = lessons.sort((a,b) => a.data.sortOrder - b.data.sortOrder)

---

<div
    class="grid grid-cols-2 gap-x-16 gap-y-14 max-md:grid-cols-1 mb-24"
>
    {orderedLessons.map((lesson) => <Lesson lesson={lesson} />)}
    
</div>