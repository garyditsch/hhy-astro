---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.astro";
interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description = "Lessons for Week One", image = "/images/bamd.jpg" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content="{image}" />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="min-h-screen">
		<Header />
		<section class="w-full max-w-6xl mx-auto m-4">
			<div class="grid md:grid-cols-12 gap-5 p-2 m-2">
			  	<main class="md:col-span-9 p-4">
					<slot />
				</main>
				<aside class="md:col-span-3 md:pt-0 p-2">
					<p>one </p>
					<p>two </p>
				</aside>
			</div>
		</section>

		<!-- <main class="px-24 max-w max-w-7xl mx-auto w-full max-sm:px-5" >
			<slot />
		</main> -->
	</body>
</html>

