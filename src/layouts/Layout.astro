---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/Header.jsx";
interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description = "A Daily Program to Help You Change Behaviors and Uncover Happiness and Health", image = "/images/bamd.jpg" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content="{image}" />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="bg-white">
		<Header client:only="react"/>
		<div class="absolute inset-0 -z-10 h-full w-full bg-white bg-[radial-gradient(#D4E4E5_1px,transparent_1px)] [background-size:16px_16px]"></div>	
		<main class="px-24 mt-8 max-w max-w-7xl mx-auto w-full max-sm:px-5" >
			<slot />
		</main>
	</body>
</html>

