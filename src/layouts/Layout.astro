---
import { ViewTransitions } from "astro:transitions";
import PrimaryHeader from "../components/PrimaryHeader.astro";
interface Props {
	title: string;
	description?: string;
	image?: string;
}

const { title, description = "A Daily Program to Help You Change Behaviors and Uncover Happiness and Health", image = "/images/bamd.jpg" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content="{image}" />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body class="min-h-screen">
		<PrimaryHeader />	
		<main class="px-24 mt-8 max-w max-w-7xl mx-auto w-full max-sm:px-5" >
			<slot />
		</main>
	</body>
</html>

