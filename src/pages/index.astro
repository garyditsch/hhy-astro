---
import Layout from '../layouts/Layout.astro';
import H1 from '../components/H1.astro';
import { Image } from 'astro:assets';
import calmEnergy from "../content/posts/images/self-identity.png"
import { callSafely } from 'astro:actions';
---

<Layout title="Happier & Healthier You">
	<div class="grid h-full w-full grid-cols-1 grid-rows-1 md:grid-cols-12 md:grid-rows-5 gap-4">
		<div class="md:col-span-6 md:row-span-3 rounded-lg bg-gray-200 flex justify-center items-center">
			<Image
				src={calmEnergy}
				alt="Calm Energy Image"
				class="object-cover rounded"
			/>
		</div>
		<div class="md:col-span-6  md:row-span-1 rounded-lg bg-gray-200 flex justify-center items-center" >
			<div class="w-full px-4 grid prose">
			<h3>Live a Happier & Healthier Life!</h3>
			</div>
		</div>
		<div class="md:col-span-4  md:row-span-2 rounded-lg bg-gray-200 flex justify-center items-center" >
			<div class="w-full px-4 grid prose">
				<div>Start Your 13 Week Journey</div>
				<ul>
					<li>Build new healthy habits</li>
					<li>Establish a chaos free mind-set</li>
					<li>Live with more purpose each day</li>
					<li>Pursue exciting adventures</li>
				</ul>
			</div>
		</div>
		<div class="md:col-span-2  md:row-span-2 rounded-lg bg-gray-200 flex justify-center items-center">Download</div>
		<div class="md:col-span-4  md:row-span-2 rounded-lg bg-gray-200 flex justify-center items-center">Featured Blog</div>
		<div class="md:col-span-4  md:row-span-1 rounded-lg bg-gray-200 flex items-center">
			<div class="bg-[#245A6E] w-1/4 h-full rounded-l-md">
				
			</div>
			<div class="bg-[#98cdd6] w-1/4 h-full">
				
			</div>
			<div class="bg-[#4793A9] w-1/4 h-full">
				
			</div>
			<div class="bg-midnightgreen w-1/4 h-full rounded-r-md">
				
			</div>
		</div>
		<div class="md:col-span-4  md:row-span-1 rounded-lg bg-gray-200 flex justify-center items-center">Week One</div>
		<div class="md:col-span-3  md:row-span-1 rounded-lg bg-gray-200 flex justify-center items-center">Week Two</div>
		<div class="md:col-span-3  md:row-span-1 rounded-lg bg-gray-200 flex justify-center items-center">Color Block</div>
		<div class="md:col-span-2  md:row-span-1 rounded-lg bg-gray-200 flex justify-center items-center">Twitter</div>
	</div>
</Layout>